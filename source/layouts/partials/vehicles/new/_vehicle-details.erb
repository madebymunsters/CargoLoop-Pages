<section class="details--card">
  <div class="card--shadow">
    <header>
      <h4>Vehicle Details</h4>
    </header>
    <div class="container">
      <form>
        <div class="row">
          <div class="columns-2__s columns-6__l">
            <div class="form-group">
              <label>Auction<span class="required">*</span></label>
              <select>
                <option>Option 1</option>
                <option>Option 2</option>
                <option>Option 3</option>
              </select>
            </div>

            <div class="form-group">
              <label>Auction Location<span class="required">*</span></label>
              <select>
                <option>Option 1</option>
                <option>Option 2</option>
                <option>Option 3</option>
              </select>
            </div>

            <div class="form-group">
              <label>Client<span class="required">*</span></label>
              <select>
                <option>Option 1</option>
                <option>Option 2</option>
                <option>Option 3</option>
              </select>
            </div>

            <div class="form-group">
              <label>Sub-client<span class="required">*</span></label>
              <select>
                <option>Option 1</option>
                <option>Option 2</option>
                <option>Option 3</option>
              </select>
            </div>

            <div class="form-group">
              <label>Buyer<span class="required">*</span></label>
              <select>
                <option>Option 1</option>
                <option>Option 2</option>
                <option>Option 3</option>
              </select>
            </div>

            <div class="form-group">
              <label>Lot Number<span class="required">*</span></label>
              <select>
                <option>Option 1</option>
                <option>Option 2</option>
                <option>Option 3</option>
              </select>
            </div>

            <div class="form-group">
              <label>Vehicle Type<span class="required">*</span></label>
              <select>
                <option>Option 1</option>
                <option>Option 2</option>
                <option>Option 3</option>
              </select>
            </div>

            <div class="form-group">
              <label>Description<span class="required">*</span></label>
              <input type="text" placeholder="Placeholder text" />
            </div>

            <div class="form-group">
              <label>VIN<span class="required">*</span></label>
              <input type="text" placeholder="Placeholder text" />
            </div>

            <div class="form-group">
              <label>Purchase Price<span class="required">*</span></label>
              <input type="text" placeholder="Placeholder text" />
            </div>
          </div>
          <div class="columns-2__s columns-6__l">
            <div class="form-group">
              <label>Purchase Date<span class="required">*</span></label>
              <input type="date" placeholder="Placeholder text" />
            </div>

            <div class="form-group">
              <label>Payment Date<span class="required">*</span></label>
              <input type="date" placeholder="Placeholder text" />
            </div>

            <div class="form-group">
              <label>Customer Notes<span class="required">*</span></label>
              <textarea></textarea>
            </div>

            <div class="form-group">
              <label>Consolidate Shipment</label><br/>
                <input type="checkbox" />
                Yes, Consolidate Shipment
            </div>

            <div class="form-group">
              <label>Payment Type</label><br/>
                <input type="radio" />
                Shipper Payment
                <input type="radio" />
                Client Payment
            </div>

            <div class="form-group">
              <label>Marine Insurance</label><br/>
                <input type="radio" />
                Yes
                <input type="radio" />
                No
            </div>

            <div class="form-group">
              <label>Keys</label><br/>
                <input type="radio" />
                Keys Present
                <input type="radio" />
                Keys Missing
                <input type="radio" />
                Not Inspected
            </div>

            <div class="form-group">
              <label>Operable</label><br/>
                <input type="radio" />
                Yes
                <input type="radio" />
                No
                <input type="radio" />
                Not Inspected
            </div>

          </div>
        </div>
      </form>
    </div>
  </div>

</section>
